            <div class="editor-field">
                @Html.TextBoxFor(u => u.RoleId)
                @Html.ValidationMessageFor(u => u.RoleId, "", new { @class = "text-danger" })
            </div>*@

            <input type="submit" value="Register" />
        </fieldset>
    </div>}
