            </div>*@
            <div class="editor-label">@Html.LabelFor(u => u.UserName)</div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.UserName)
                @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="editor-label">@Html.LabelFor(u => u.Password)</div>
            <div class="editor-field" type="password">
                @Html.TextBoxFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
            </div>
            <div class="editor-label">@Html.LabelFor(u => u.ConfirmPassword)</div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.ConfirmPassword)
                @Html.ValidationMessageFor(u => u.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <div class="editor-label">@Html.LabelFor(u => u.EmailAddress)</div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.EmailAddress)
                @Html.ValidationMessageFor(u => u.EmailAddress, "", new { @class = "text-danger" })
            </div>
            <div class="editor-label">@Html.LabelFor(u => u.PhoneNumber)</div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.PhoneNumber)
                @Html.ValidationMessageFor(u => u.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="editor-label">@Html.LabelFor(u => u.Gender)</div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Gender)
                @Html.ValidationMessageFor(u => u.Gender, "", new { @class = "text-danger" })
            </div>
            <div class="editor-label">@Html.LabelFor(u => u.Address)</div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Address)
                @Html.ValidationMessageFor(u => u.Address, "", new { @class = "text-danger" })
            </div>
            @*<p>Copy this role ID if u r customer:2368</p>
