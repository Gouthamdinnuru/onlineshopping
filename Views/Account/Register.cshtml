@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Registeration Failed, check the fields...", new { @class = "text-danger" });
    <div>
        <fieldset>
            <legend>Register Form</legend>
            @*<div class="editor-label">@Html.LabelFor(u => u.UserID)</div>*@
